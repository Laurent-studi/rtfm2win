<?xml version="1.0"?>
<ruleset name="rtfm2win">
    <description>Analyse du code PHP avec PSR12</description>

    <!-- Règles à utiliser -->
    <rule ref="PSR12"/>

    <!-- Répertoires à exclure  -->
    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>private_/*</exclude-pattern>
    <exclude-pattern>.env</exclude-pattern>

    <!-- Répertoires ou fichiers à analyser -->
    <file>.</file>
</ruleset>
